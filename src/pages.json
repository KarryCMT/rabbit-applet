{
  "easycom": {
    "custom": {
      "autoscan": true,
      "^rb-(.*)": "@/components/rb-$1/index.vue"
    }
  },
  "pages": [
    {
      "path": "pages/home/index",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationStyle": "custom",
        "disableScroll": true
      }
    },
    {
      "path": "pages/publish/index",
      "style": {
        "navigationBarBackgroundColor": "#eecd50",
        "navigationBarTitleText": "发布",
        "disableScroll": true
      }
    },
    {
      "path": "pages/detail/index",
      "style": {
        "navigationStyle": "custom",
        "disableScroll": false
      }
    },
    {
      "path": "pages/search/index",
      "style": {
        "navigationStyle": "custom",
        "disableScroll": false
      }
    },
    {
      "path": "pages/follow/index",
      "style": {
        "navigationBarBackgroundColor": "#eecd50",
        "navigationBarTitleText": "我的关注",
        "disableScroll": false
      }
    },
    {
      "path": "pages/draft/index",
      "style": {
        "navigationBarBackgroundColor": "#eecd50",
        "navigationBarTitleText": "我的草稿",
        "disableScroll": false
      }
    },
    {
      "path": "pages/message/index",
      "style": {
        "navigationBarBackgroundColor": "#eecd50",
        "navigationBarTitleText": "我的消息",
        "disableScroll": false
      }
    }
  ],
  "lazyCodeLoading": "requiredComponents",
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "rabbit",
    "navigationBarBackgroundColor": "#3474FF",
    "backgroundColor": "#EEEEF4"
  },
  "tabBar": {
    "color": "#666",
    "selectedColor": "#eecd50",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/home/index",
        "iconPath": "static/tabbar/bar-1.png",
        "selectedIconPath": "static/tabbar/bar-1-active.png",
        "text": "帖子"
      },
      {
        "pagePath": "pages/mine/index",
        "iconPath": "static/tabbar/bar-5.png",
        "selectedIconPath": "static/tabbar/bar-5-active.png",
        "text": "我的"
      }
    ]
  }
}
